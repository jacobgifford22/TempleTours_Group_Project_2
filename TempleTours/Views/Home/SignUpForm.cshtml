
@* This is for adding information after the time slot is set*@
@{
    ViewData["Title"] = "SignUp Form";
}

@model TempleTours.Models.Appointment


<h1>PLease fill out the information below to secure your temple tour appointment.</h1>


<div>
    <p>@Model.AppointmentTimeSlot.TimeSlotDay</p>
    <p>@Model.AppointmentTimeSlot.TimeSlotStart</p>

    <form method="post">
        <div asp-validation-summary="All"></div>
        <input type="hidden" id="AppointmentId" asp-for="AppointmentId" />
        <input type="hidden" id="TimeSlotId" asp-for="AppointmentTimeSlot" />

        <br />
        <label asp-for="GroupName">Group Name</label>
        <input asp-for="GroupName" />
        <br />

        <label asp-for="GroupSize">Group Size</label>
        <input asp-for="GroupSize" />
        <br />

        <label asp-for="Email">Email</label>
        <input asp-for="Email" />
        <br />

        <label asp-for="Phone">Phone Number</label>
        <input asp-for="Phone" />

        <br />

        <button type="submit">Submit Tour</button>
    </form>
</div>
