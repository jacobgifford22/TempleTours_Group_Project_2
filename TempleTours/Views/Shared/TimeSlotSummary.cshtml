@{
}

@model TimeSlot

<div class="card card-outline-primary m-1 p-1">
    <div class="card-text p-1">
        <span>Date: @Model.TimeSlotDay</span>
        <br />
        <span>Time: @Model.TimeSlotStart</span>
    </div>

    <form method="post" asp-controller="Home" asp-action="SignUpForm">
        <input type="hidden" asp-for="@Model.TimeSlotId" />

        <span class="card-text">
            <button type="submit" class="btn btn-success btn-sm float-end">Sign Up</button>
        </span>
    </form>
</div>